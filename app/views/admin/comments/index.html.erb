
<h1>全コメント一覧</h1>

<table class ="table">
<thead>
<tr>
<th>コメント</th>
<th colspan="3"></th>
</tr>
</thead>

<tbody>
  <tr>
  <% @comments.each do |comment| %>
   <tr>
   <td><%= comment.body %></td>
   <td><%= link_to '削除', admin_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
  </tr>
  <% end %>
  </tbody>
  </table>
