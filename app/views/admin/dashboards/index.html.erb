<h1>全ユーザー一覧</h1>

<table class ="table">
<thead>
<tr>
<th>ユーザー</th>
<th colspan="3"></th>
</tr>
</thead>

<tbody>
  <tr>
  <% @users.each do |user| %>
   <tr>
   <td><%= user.name %> - <%= user.email %></td>
   <td><%= link_to 'ユーザー詳細', admin_user_path(user) %></td>
  </tr>
  <% end %>
  </tbody>
  </table>

  <h1>全コメント一覧</h1>

<table class ="table">
<thead>
<tr>
<th>コメント</th>
<th colspan="3"></th>
</tr>
</thead>

<tbody>
  <tr>
  <% @comments.each do |comment| %>
   <tr>
   <td><%= comment.body %></td>
  </tr>
  <% end %>
  </tbody>
  </table>


