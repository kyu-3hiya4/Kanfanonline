<div class="container">
  <div class="row">
  
  <div class ="col-lg-10 col-md-10 mx-2 mx-sm-auto">
  <h2>感想一覧</h2>
    <table class ="table">
    <thead>
    <tr>
    <th>タイトル</th>
    <th>感想</th>
    <th colspan="3"></th>
    </tr>
    </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
    <td><%= post.user.name %></td>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td>
    <%= link_to '投稿詳細', post_path(post.id), class: "btn btn-md btn-secondary" %>
    </td>
    </tr>
    <% end %>
  </tbody>
  
</table>
</div>
</div>
</div>