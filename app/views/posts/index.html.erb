<div class="container">
  <div class="row">
  
  <div class ="col-md-8 offset-md-1">
  <h2>感想一覧</h2>
    <table class ="table">
    <thead>
    <tr>
    <th>Title</th>
    <th>body</th>
    <th colspan="3"></th>
    </tr>
    </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
    <td>ユーザーネーム：<%= post.user.name %></td>
    <td>タイトル：<%= post.title %></td>
    <td>本文：<%= post.body %></td>
    <td><li>
    <%= link_to '投稿詳細', post_path(post.id) %>
    </li></td>
    </tr>
    <% end %>
  </tbody>
  
</table>
</div>
</div>
</div>