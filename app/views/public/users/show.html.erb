<div class="container">
 <div class="row">
 

  <div class="col-lg-10 col-md-10 mx-2 mx-sm-auto">
  <% if @user == current_user %>
  <h2>マイページ</h2>
  <% else %>
  <h2>ユーザー情報</h2>
  <% end %>

  <div>
  <h3><%= @user.name %></h3>
 
  <% unless @user.guest_user? %>
  <% if @user == current_user %>
  <p><%= link_to 'マイページ編集', edit_user_path(@user), class: "btn btn-md btn-warning" %>
  <p><%= link_to '退会', user_path(@user), class: "destroy-user", method: :delete, data: { confirm: '本当に退会しますか？' }, class: "btn btn-md btn-danger" %></P>
  <% end %> 
  <% end %>
  </div>

  <table class=table>
  <thead>
  <tr>
  <th></td>
  <th>タイトル</th>
  <th>感想</th>
  <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
  <tr>
  <td><%= post.user.name %></td>
  <td><%= post.title %></td>
  <td><%= post.body %></td>
  <td>
  <%= link_to '感想詳細', post_path(post.id), class: "btn btn-md btn-secondary" %>
  </td>
  </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>
</div>