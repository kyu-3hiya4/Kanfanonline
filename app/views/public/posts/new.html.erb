<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

<h1 class="mt-2">感想投稿フォーム</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>
  
  <div class="form-group">
  <label for="title">タイトル</label><br>
  <%= f.text_field :title %>
  </div>

  <div class="form-group">
  <label for="body">感想</label><br>
  <%= f.text_area :body, class: 'form-control', size: "15×20" %>

    <% if @post.persisted? %>
      <% if @post.draft? %>
        <%= f.submit '下書き保存', name: 'draft', class: "btn btn-sm btn-secondary" %>
        <%= f.submit '公開する', name: 'published', class: "btn btn-sm btn-success" %>
      <% elsif @post.unpublished? %>
        <%= f.submit '非公開にする', name: 'unpublished', class: "btn btn-sm btn-danger" %>
        <%= f.submit '公開する', name: 'published', class: "btn btn-sm btn-success" %>
      <% else %>
        <%= f.submit '非公開にする', name: 'unpublished', class: "btn btn-sm btn-danger" %>
        <%= f.submit '公開する', name: 'published', class: "btn btn-sm btn-success" %>
      <% end %>
    <% else %>
        <%= f.submit '下書き保存', name: 'draft', class: "btn btn-sm btn-secondary" %>
        <%= f.submit '公開する', name: 'published', class: "btn btn-sm btn-success" %>
    <% end %>
  <% end %>
</div>
</div>
</div>
</div>