  <div class="container">
  <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 sm-0 mx-auto">

<h1>投稿編集</h1>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, url: post_path(@post), method: :patch do |f| %>

 <div class="form-group">
  <label for="title">タイトル</label>
  <br>
  <%= f.text_field :title %>
  </div>
  
  <div class="form-group">
  <label for="body">感想</label>
  <br>
  <%= f.text_area :body %>
  </div>
  
   <% if @post.user == current_user %>
   <div class="form-group">
    <% if @post.persisted? %>
      <% if @post.draft? %>
        <%= f.submit '下書き保存', name: 'draft', class: "btn btn-sm btn-secondary" %>
        <%= f.submit '公開する', name: 'published', class: "btn btn-sm btn-success" %>
      <% elsif @post.unpublished? %>
        <%= f.submit '非公開にする', name: 'unpublished', class: "btn btn-sm btn-danger" %>
        <%= f.submit '公開する', name: 'published', class: "btn btn-sm btn-success" %>
      <% else %>
        <%= f.submit '非公開にする', name: 'unpublished', class: "btn btn-sm btn-danger" %>
        <%= f.submit '公開する', name: 'published', class: "btn btn-sm btn-success" %>
      <% end %>
    <% else %>
        <%= f.submit '下書き保存', name: 'draft', class: "btn btn-sm btn-secondary" %>
        <%= f.submit '公開する', name: 'published', class: "btn btn-sm btn-success" %>
    <% end %>
   
    <%= link_to "削除", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
   </div>
  
  <% end %>
  <% end %>
  </div>
 </div>
 </div>